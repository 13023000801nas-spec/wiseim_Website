    <script>
        const apiKey = ""; // API key is provided at runtime in the canvas environment
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

        // Utility function for exponential backoff retry
        async function fetchWithRetry(url, options, maxRetries = 3) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (response.status === 429 && i < maxRetries - 1) {
                        const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue;
                    }
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response;
                } catch (error) {
                    if (i === maxRetries - 1) throw error;
                    const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                    await new Promise(resolve => setTimeout(resolve, delay));
                }
            }
        }

        async function handleDiagnosis() {
            const inputElement = document.getElementById('painPointInput');
            const resultDiv = document.getElementById('diagnosisResult');
            const resultContent = document.getElementById('resultContent');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const button = document.getElementById('diagnosisButton');
            const errorBox = document.getElementById('errorBox');
            const inputChallenge = inputElement.value.trim();

            resultDiv.classList.add('hidden');
            errorBox.classList.add('hidden');
            resultContent.textContent = '';

            if (inputChallenge.length < 30) {
                errorBox.classList.remove('hidden');
                document.getElementById('errorMessage').textContent = '请输入至少30字的企业挑战描述，以便AI进行深度分析。';
                return;
            }

            button.disabled = true;
            document.getElementById('buttonText').textContent = '分析中...';
            loadingIndicator.classList.remove('hidden');
            
            // System instruction to set the persona and format the output
            const systemPrompt = `你是一位专注于IPD（集成产品开发）、组织变革和研发管理的高级咨询专家，目标客户是年咨询费在500万以上的行业领导者。请以专业的、高屋建瓴的语气，对用户提供的企业挑战进行高层次诊断。

请严格按照以下格式输出：
### 核心痛点分析
[用精炼的语言，提炼出1到3个核心痛点]

### 战略模块建议
[基于痛点，精准指出最应该优先启动的IPD或战略模块（例如：市场管理MM, 投资组合管理PPM, 结构化开发流程PDP, 跨部门团队IPMT等）]

### 3点行动方向
[提供3条高层次、具备战略指导意义的行动建议]

请确保语言专业、简洁，且充满洞察力。`;

            const userQuery = `请针对我们企业面临的挑战进行诊断，挑战描述如下：\n\n"${inputChallenge}"`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: {
                    parts: [{ text: systemPrompt }]
                },
                // No tools (grounding) needed, as this is internal management analysis based on established models (IPD).
            };

            try {
                const response = await fetchWithRetry(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || '未能获得有效的诊断结果，请尝试调整您的输入。';

                resultContent.textContent = text;
                resultDiv.classList.remove('hidden');

            } catch (error) {
                console.error("Gemini API Error:", error);
                errorBox.classList.remove('hidden');
                document.getElementById('errorMessage').textContent = '诊断请求失败：网络或API连接异常。请稍后再试。';
            } finally {
                loadingIndicator.classList.add('hidden');
                button.disabled = false;
                document.getElementById('buttonText').textContent = '重新诊断 ✨';
            }
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('shadow-md');
                navbar.classList.replace('py-4', 'py-2');
            } else {
                navbar.classList.remove('shadow-md');
                navbar.classList.replace('py-2', 'py-4');
            }
        });
    </script>
<script type="module" src="/index.tsx"></script)>
</body>
